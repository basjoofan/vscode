{
  "name": "basjoofan",
  "displayName": "Basjoofan",
  "description": "Basjoofan support for Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "basjoofan",
  "private": true,
  "icon": "icons/icon.png",
  "license": "MIT OR Apache-2.0",
  "repository": "https://github.com/basjoofan/vscode",
  "engines": {
    "vscode": "^1.68.0"
  },
  "keywords": [
    "basjoofan",
    "test"
  ],
  "categories": [
    "Testing",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:*.fan"
  ],
  "main": "out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "wasm:pack": "wasm-pack build --target nodejs --out-dir ./node_modules/lib",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.2"
  },
  "contributes": {
    "languages": [
      {
        "id": "basjoofan",
        "aliases": [
          "Basjoofan",
          "basjoofan"
        ],
        "extensions": [
          ".fan"
        ],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "icons/file.png",
          "dark": "icons/file.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "basjoofan",
        "scopeName": "source",
        "path": "syntaxes/language.json"
      }
    ]
  }
}

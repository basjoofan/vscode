{
  "name": "am",
  "displayName": "Am Test",
  "description": "Am Test support for Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "basjoofan",
  "private": true,
  "icon": "icons/am.png",
  "license": "MIT",
  "repository": "https://github.com/basjoofan/am",
  "engines": {
    "vscode": "^1.68.0"
  },
  "keywords": [
    "am",
    "test"
  ],
  "categories": [
    "Testing",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:*.am"
  ],
  "main": "out/extension.js",
  "browser": "./dist/web/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run compile && cargo build --target wasm32-unknown-unknown",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "esbuild": "node ./bin/esbuild.js",
    "generate:model": "wit2ts --outDir ./src ./wit",
    "package": "vsce package",
    "serve": "serve --cors -l 5555 --ssl-cert $HOME/certs/localhost.pem --ssl-key $HOME/certs/localhost-key.pem"
  },
  "dependencies": {
    "@vscode/wasm-component-model": "1.0.1"
  },
  "devDependencies": {
		"@eslint/js": "^9.18.0",
		"@stylistic/eslint-plugin": "^2.13.0",
		"@types/node": "^22",
		"@types/vscode": "1.96.0",
    "@vscode/vsce": "^3.2.1",
		"esbuild": "^0.24.2",
		"eslint": "^9.18.0",
		"serve": "^14.2.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "am",
        "aliases": [
          "Am",
          "am"
        ],
        "extensions": [
          ".am"
        ],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "icons/file.png",
          "dark": "icons/file.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "am",
        "scopeName": "source.am",
        "path": "syntaxes/am.tmLanguage.json"
      }
    ]
  }
}

{
  "name": "am",
  "displayName": "Am Test",
  "description": "Am Test support for Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "basjoofan",
  "private": true,
  "icon": "icons/am.png",
  "license": "MIT",
  "repository": "https://github.com/basjoofan/am",
  "engines": {
    "vscode": "^1.68.0"
  },
  "keywords": [
    "am",
    "test"
  ],
  "categories": [
    "Testing",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:*.am"
  ],
  "main": "out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run compile && cargo build --target wasm32-unknown-unknown",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./",
    "generate:model": "wit2ts --outDir ./src ./wit",
    "package": "vsce package"
  },
  "dependencies": {
    "@vscode/wasm-component-model": "1.0.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2"
  },
  "contributes": {
    "languages": [
      {
        "id": "am",
        "aliases": [
          "Am",
          "am"
        ],
        "extensions": [
          ".am"
        ],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "icons/file.png",
          "dark": "icons/file.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "am",
        "scopeName": "source.am",
        "path": "syntaxes/am.tmLanguage.json"
      }
    ]
  }
}
